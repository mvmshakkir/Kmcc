


<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            background: #fff;
            font-family: Raleway;
            text-transform: uppercase;
            font-size: 11px;
        }
    </style>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <script src="    https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>

</head>
<body>
<!-- Page Heading -->
<h1 align="center" class="h3 mb-2 text-gray-800">Ward Details</h1>
    

<div class="card shadow mb-4">
    <div class="card-header py-3">
        @* <h6 class="m-0 font-weight-bold text-primary"> <a class="nav-link" href="/Ward">Add Ward</a></h6> *@
            
                <button onclick="exportTableToPDF()"><i class="fas fa-file-pdf" style="color: red; background-color: white;"></i></button>
                @* <i class="fas fa-file-pdf fa-lg" style="color: red; background-color: white;"> *@
                <button onclick="exportTableToExcel()"><i class="fas fa-file-excel" style="color: green; background-color: white;"></i></button>
            <button onclick="exportTableToPDF()"><i class="fas fa-file-pdf" style="color: red; background-color: white;"></i></button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    @* <tr><a id="add" asp-action="Create" class="button">Create New</a></tr> *@
                    <tr>
                        <th>RegId</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Ward</th>
                        <th>City</th>
                        <th>Phone</th>
                        <th>Whatsapp</th>


                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.UsersWithPayment != null)
                    {
                        foreach (var user in ViewBag.UsersWithPayment)
                        {
                            <tr>
                                <td>@user.RegistrationId</td>
                                <td>@(user.FirstName + " " + user.LastName)</td>
                                <td>@user.Address</td>
                                <td>@user.Ward</td>
                                <td>@user.City</td>
                                <td>@user.Phone</td>
                                    <td>@user.Whatsapp</td>
                            </tr>
                        }
                    }
                    else if (ViewBag.UsersWithoutPayment != null)
                    {
                        foreach (var user in ViewBag.UsersWithoutPayment)
                        {
                            <tr>
                                <td>@user.RegistrationId</td>
                                <td>@(user.FirstName + " " + user.LastName)</td>
                                <td>@user.Address</td>
                                <td>@user.Ward</td>
                                <td>@user.City</td>
                                <td>@user.Phone</td>
                                <td>@user.Whatsapp</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    <script>
      
        function exportTableToPDF() {
            var pdf = new jsPDF();
            //pdf.text(20, 20, "Ward Data");
            var pageWidth = pdf.internal.pageSize.width;
            var text = "Ward Data";
            var textWidth = pdf.getStringUnitWidth(text) * pdf.internal.getFontSize() / pdf.internal.scaleFactor;
            var x = (pageWidth - textWidth) / 2; // Center the text horizontally
            pdf.text(x, 20, text);
            var margins = { top: 30, left: 10, bottom: 20, right: 10 };
            pdf.autoTable({
                html: '#dataTable',
                startY: 25,
                theme: 'grid',
                columnStyles: {
                    0: { cellWidth: 13 },  // Adjust column width for column 0
                    1: { cellWidth: 30 },  // Adjust column width for column 1
                    2: { cellWidth: 30 },  // Adjust column width for column 2
                    3: { cellWidth: 25 } ,  // Adjust column width for column 3
                    4: {cellWidth :25}
                },
                bodyStyles: { lineColor: [1, 1, 1] },
                styles: { minCellHeight: 10 }
            });
            window.open(URL.createObjectURL(pdf.output("blob")))
        }


        // Export Table to Excel
        function exportTableToExcel() {
            const table = document.getElementById('dataTable');
            const workbook = XLSX.utils.table_to_book(table, { sheet: "Sheet1" });
            XLSX.writeFile(workbook, 'WardDetails.xlsx');
        }
    </script>


</body>
</html>
