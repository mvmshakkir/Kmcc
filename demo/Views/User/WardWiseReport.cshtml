		<form id="wardForm" method="post" asp-controller="WardReport" asp-action="PostWard">
			<label for="wardSelect">Select Ward:</label>
			<select id="wardSelect" name="wardId" class="form-control" style="width:42%;margin-top:31px;">
				@foreach (var wardItem in ViewBag.Ward)
				{
					<option value="@wardItem.Id">@wardItem.Wardno-@wardItem.Wardname</option>
				}
			</select>
			<label for="Termid">Select Term:</label>
			<select id="Termid" name="Termid" class="form-control" style="width:42%;">
				@foreach (var item in ViewBag.Terms)
				{
					<option value="@item.TermId">@item.Term</option>
				}
			</select>
			<label for="statusid">Status</label>
			<select id="" name="statusid" class="form-control" style="width:42%;">
				<option value="1">Paid</option>
				<option value="2">Pending</option>
			</select>
			<button type="submit" class="button">Submit</button>
		</form>
	</div>

	<!-- Include your scripts at the end of the body -->
