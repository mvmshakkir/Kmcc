	<script src="/Login_v16/table/js/main.js"></script>
</body>

<script>
	function submitForm() {
		// Get selected values from the dropdowns
		var termId = document.getElementById("Termid").value;
		var wardNo = document.getElementById("wardSelect").value;
		var statusId = document.getElementById("statusid").value;

		// Set values to hidden input fields
		document.getElementById("termIdHidden").value = termId;
		document.getElementById("wardNoHidden").value = wardNo;
		document.getElementById("statusIdHidden").value = statusId;

		// Submit the form
		document.getElementById("wardForm").submit();
	}
</script>
