	<style>
		body {
			margin: 0;
			font-family: Arial, Helvetica, sans-serif;
			padding-top: 250px;
		}

		.topnav {
			overflow: hidden;
			background: linear-gradient(to right, #37f67f, #12d34c) !important;
		}

			.topnav a {
				float: right;
				color: #f2f2f2;
				text-align: center;
				padding: 20px 20px;
				text-decoration: none;
				font-size: 20px;
			}

				.topnav a:hover {
					background-color: #ddd;
					color: green;
				}

		.button {
			background-color: #4CAF50;
			border: none;
			color: white;
			padding: 5px 5px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
			margin: 1px 1px;
			cursor: pointer;
		}

		.form-control {
			width: 500px;
		}

		.form-wrapper {
			margin-bottom: 10px;
			padding: 10px;
		}

		.form-inputs {
			display: inline-block; /* Ensures form elements are on the same line */
		}

			.form-inputs .form-wrapper {
				display: block; /* Sets each form input as a block for vertical alignment */
			}

		.center-button {
			text-align: center; /* Aligns the button to the center */
			width: 100%; /* Forces the container to take full width */
		}

			.center-button button {
				display: inline-block; /* Makes the button inline-block to center it */
			}

	</style>


</head>
