<script>
    let barChart;

    // Fetch available years from the backend and populate the year dropdown
    function loadYears() {
        fetch('/Dashboard/GetAvailableYears')
            .then(response => response.json())
            .then(years => {
                const yearSelector = document.getElementById('yearSelector');
                yearSelector.innerHTML = ''; // Clear existing options

                years.forEach(year => {
                    const option = document.createElement('option');
                    option.value = year;
                    option.textContent = year;
                    yearSelector.appendChild(option);
                });

                // Fetch and render the chart for the first year in the list
                if (years.length > 0) {
                    yearSelector.value = years[0];
                    fetchAndRenderChart();
                }
            })
            .catch(error => console.error('Error loading years:', error));
    }

    // Fetch and render the chart based on selected year
    function fetchAndRenderChart() {
        const selectedYear = document.getElementById("yearSelector").value;

        // Fetch monthly data for the selected year
        fetch(`/Dashboard/GetMonthlyData?year=${selectedYear}`)
            .then(response => response.json())
            .then(data => {
                renderChart(data.months, data.totalAmounts);
            })
            .catch(error => console.error('Error fetching data:', error));
    }

    // Render the bar chart
    function renderChart(months, totalAmounts) {
        if (barChart) {
            barChart.destroy(); // Destroy the existing chart to avoid re-adding it
        }

        const ctx = document.getElementById("myBarChart").getContext("2d");

        barChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: months, // Array of months (e.g., ['01', '02', '03', ..., '12'])
                datasets: [{
                    label: 'Total Amount',
                    data: totalAmounts, // Array of amounts (e.g., [500, 0, 1200, 0, ...])
                    backgroundColor: 'rgba(54, 162, 235, 0.6)', // Bar color
                    borderColor: 'rgba(54, 162, 235, 1)',     // Border color
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: true
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    // Load available years when the page loads
    document.addEventListener('DOMContentLoaded', function () {
        loadYears(); // Populate the year dropdown dynamically
    });
</script>