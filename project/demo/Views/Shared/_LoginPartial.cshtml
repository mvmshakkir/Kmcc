@using Microsoft.AspNetCore.Identity
@using demo.Areas.Identity.Data
@using demo.Views.reg

@inject SignInManager<demoUser> SignInManager
@inject UserManager<demoUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="" asp-controller="User" asp-action="viewuser">Profile</a>
        </li>


    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="reg" asp-area="Views" asp-page="/reg/reg">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
        @* <li class="nav-item">
            <a class="nav-link text-dark" id="reg" asp-area="Identity" asp-page="/reg/reg">Reg</a>
        </li> *@
}
</ul>
